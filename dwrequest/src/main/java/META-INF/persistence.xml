<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="dwrequest" transaction-type="RESOURCE_LOCAL">
	
	<class>br.com.dw.request.classe.Estado</class>
	<class>br.com.dw.request.classe.Cidade</class>
	<class>br.com.dw.request.classe.Empresa</class>
	<class>br.com.dw.request.classe.Usuario</class>
	<class>br.com.dw.request.classe.Modulo</class>
	<class>br.com.dw.request.classe.UsuarioModulo</class>
	<class>br.com.dw.request.classe.CadastroGeral</class>
	<class>br.com.dw.request.classe.Contato</class>
	<class>br.com.dw.request.classe.Endereco</class>
	<class>br.com.dw.request.classe.ConfCadastro</class>
	
	<properties>
			
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/dwrequest" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
      		
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
  